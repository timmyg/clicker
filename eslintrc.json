{
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "include": ["./**/*.ts"],
  "exclude": [
    "*/**/node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "*.config.js",
    "**/*.js"
  ],
  "rules": {
    "prettier/prettier": ["error"],
    "no-console": ["error", { "allow": ["info", "error"] }]
  },
  "env": {
    "jest": true
  }
}
